<div class="preview-box">
  <h2><%= @box.title %></h2>
    <p>Hi, I am <%= @box.user.first_name %> <%= @box.user.last_name %>, <br>
    and my box will be destroyed in <%= @box.time_left.to_s %> hours!   </p>
  <div class="media">
    <div class="media-left">
      <%= image_tag"#{@box.user.facebook_picture_url}", class: "avatar-large"%>
    </div>
    <div class="media-body">
      <strong><%= @box.user.first_name %> <%= @box.user.last_name %></strong>
      <%= render "users/average_rating", average_rating: @box.user.average_rating %>
    </div>
  </div>
  <div class="text-right">
  <% if (@open)==true %>
    <%= link_to "Let's get into that box", box_path(@box), class: 'animsition-link' %>
  <% else %>
    <div class="nope">Looks like you're not close enough...</div>
    <div class="nope"><%= @distance.round(2).to_s %> kilometers to go!</div>
  <% end %>
  </div>
</div>
